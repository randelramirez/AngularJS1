@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!doctype html>
<html lang="en" ng-app="eventsApp">
<head>
    <meta charset="utf-8" />
    <title>Cookie Store Sample</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/app.css" rel="stylesheet" />
</head>
<body>
    <h2>Index</h2>
    <div class="container" ng-controller="CookieStoreSampleController">
        <button class="btn" ng-click="saveEventToCookie(event)">Store Cookie</button>
        <button class="btn" ng-click="getEventFromCookie()">Get Cookie</button>
        <button class="btn" ng-click="removeEventCookie()">Remove Cookie</button>
    </div>
    <script src="~/Scripts/lib/jquery.min.js"></script>
    <script src="~/Scripts/lib/angular/angular.js"></script>
    <script src="~/Scripts/lib/angular/angular-resource.js"></script>
    <script src="~/Scripts/lib/angular/angular-cookies.js"></script>
    <script src="~/Scripts/lib/underscore-1.4.4.min.js"></script>
    <script src="~/Scripts/js/app.js"></script>
    <script src="~/Scripts/js/controllers/CookieStoreSampleController.js"></script>
    <script src="~/Scripts/lib/bootstrap.min.js"></script>
</body>
</html>


